<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/todoListFragment"
        android:name="com.romkapo.todoapp.presentation.screen.todolistitems.TodoListFragment"
        android:label="fragment_todo_list"
        tools:layout="@layout/fragment_todo_list">
        <action
            android:id="@+id/action_todoListFragment_to_addEditItem"
            app:destination="@id/addEditFragment">
        </action>
        <action
            android:id="@+id/action_todoListFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/navigation_graph"/>
    </fragment>
    <fragment
        android:id="@+id/addEditFragment"
        android:name="com.romkapo.todoapp.presentation.screen.addedititem.AddEditItemFragment"
        android:label="fragment_add_edit_item"
        tools:layout="@layout/fragment_add_edit_item">
        <action
            android:id="@+id/action_addEditFragment_to_todoListFragment"
            app:destination="@id/todoListFragment" />
        <argument
            android:name="todoItemID"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/authFragment"
        android:name="com.romkapo.todoapp.presentation.screen.auth.AuthFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_auth">
        <action
            android:id="@+id/action_authFragment_to_todoListFragment"
            app:destination="@id/todoListFragment"
            app:popUpToInclusive="true"
            app:popUpTo="@id/navigation_graph"/>
    </fragment>

</navigation>